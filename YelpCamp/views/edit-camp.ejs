<%- include('partials/header.ejs') %>
<div class="container">
    <header class="jumbotron">
        <h1>Edit Campground</h1>
        <a class="btn btn-primary btn-lg my-1" href="/campgrounds">Back to CampGround Info</a>
    </header>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="campName">Camp name</label>
          <input name="campName" type="text" class="form-control" id="campName" aria-describedby="campName" placeholder="ex: everest" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label for="campImg">Image URL</label>
          <input name="campImg" type="text" class="form-control" id="campImg" placeholder="https://image.com" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input name="description" type="text" class="form-control" id="description" placeholder="Lorem Ipsum Dolor Sit Amet" value="<%= campground.description %>">
          </div>
        <button type="submit" class="btn btn-primary">Edit Camp</button>
      </form>
</div>
<%- include('partials/footer.ejs') %>