<%- include('partials/header.ejs') %>
<div class="container">
    <h1>Edit Comment</h1>
    <form action="/campgrounds/<%= data.id %>/comments/<%= data.comment_id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="description">Your Comment :</label>
            <input name="text" type="text" class="form-control" id="description" placeholder="Lorem Ipsum Dolor Sit Amet" value="<%= comment.text %>">
          </div>
        <button type="submit" class="btn btn-primary">Edit Comment</button>
      </form>
</div>
